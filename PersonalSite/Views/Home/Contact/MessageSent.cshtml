
@{
    ViewBag.TitleExtension = " - Message Sent";
}

<div class="page-div">
    <div class="panel panel-success">
        <div class="panel-heading" style="color:lightgreen">
            <h1><span class="glyphicon glyphicon-ok"></span> Success!</h1>
        </div>

        <div class="panel-body">
            <h3>You've sucessfuly sent your message!</h3>
            <h3>I will try to get back to you as soon as possible.</h3>
        </div>

        <div class="panel-footer">
            <a href="@Url.Action("Contact")" class="btn btn-default">Go Back</a>
        </div>
    </div>
</div>