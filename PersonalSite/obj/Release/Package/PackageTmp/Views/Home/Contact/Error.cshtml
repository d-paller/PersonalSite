
@{
    ViewBag.TitleExtension = " - Contact Error";
}
<style>
    #bridge-img{
        max-width: 100%;
    }

    #bridge{
        display:none;
    }
</style>


<div class="page-div error-page">
    <div class="panel panel-danger">
        <div class="panel-heading" style="color:red">
            <h1><span class="glyphicon glyphicon-remove"></span>Error</h1>
        </div>
        <div class="panel-body text-center">
            <h3>I'm sorry, something went wrong, please use the "Contact" page to send me a message about it.</h3>
            <h3>If the problem continues... </h3>

            <a href="#" class="btn btn-primary" id="bridge-btn">Go Here</a>
            <div id="bridge">
                <h3> Cry me a river, build a bridge and get over it!</h3>
                <img src="~/Content/Suspension_bridge_icon.svg.png" alt="Bridge clipart" id="bridge-img"/>
            </div>
            
        </div>

        <div class="panel-footer">
            <a href="@Url.Action("Contact")" class="btn btn-default">Go Back</a>
        </div>
    </div>
</div>

